{
  "extends": "../tsconfig.base.json",
  "references": [
    {"path": "../server"}
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@bluescript/compiler": ["../server/src"],
      "@bluescript/compiler/*": ["../server/src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
