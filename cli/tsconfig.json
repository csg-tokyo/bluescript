{
  "extends": "../tsconfig.base.json",
  "references": [
    {"path": "../language"}
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@bluescript/language": ["../language/src"],
      "@bluescript/language/*": ["../language/src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
